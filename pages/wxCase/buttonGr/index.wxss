/* pages/wxCase/buttonGr/index.wxss */
.a {
  background: transparent;
  color: #23b7cb;
  font-size: 15px;
  padding: 5px 15px;
  width: 200px;
  height: 100px;
  border: 4px transparent solid;
  border-image: linear-gradient(to right, #000718, #23b7cb) 1 10;
  /* 注意问题：border-image的使用是不能实现圆角的效果，各位需要注意这个属性 */
}

/* 利用伪类元素去实现背景边的渐变效果，同时我们还可以加上动画效果，利用的是transtion:all ease 300ms即可 */
.b {
  color: #23b7cb;
  font-size: 15px;
  padding: 5px 15px;
  background: #fff;
  width: 200px;
  height: 100px;
  border: 1px transparent solid;
  border-radius: 30px;
  position: relative;
}

.b::after {
  content: '';
  position: absolute;
  top: -3px;
  bottom: -3px;
  left: -3px;
  right: -3px;
  background: linear-gradient(135deg, #000781, #23b7cb);
  border-radius: 30px;
  content: '';
  z-index: -1;
}