.exp {
  display: none;
}

.exp:checked+.text {
  max-height: none;
}

.exp:checked+.text .btn::after {
  content: '收起'
}

.exp:checked+.text .btn::before {
  visibility: hidden;
  /*在展开状态下隐藏省略号*/
}


.a_box {
  display: flex;
  overflow: hidden;
}

.aa {
  width: 440rpx;
  font-size: 20rpx;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: justify;
  position: relative;
  max-height: 60rpx;
}

.aa::before {
  content: '';
  height: calc(100% - 32rpx);
  float: right;
}

.info_see {
  font-size: 20rpx;
  height: 28rpx;
  line-height: 28rpx;
  color: #147ABE;
  text-decoration: underline;
  position: relative;
  float: right;
  clear: both;
  margin-left: 10rpx;
}