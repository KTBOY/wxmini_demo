/* pages/wxCase/buttonGr/index.wxss */
page {
  background: #222;
}
view{
  margin: 30px auto;
}

/* 注意问题：border-image的使用是不能实现圆角的效果，各位需要注意这个属性 */
.a {
  background: transparent;
  color: #23b7cb;
  font-size: 15px;
  padding: 5px 15px;
  width: 200px;
  height: 100px;
  border: 4px transparent solid;
  border-image: linear-gradient(to right, #000718, #23b7cb) 1 10;
}

/* 利用伪类元素去实现背景边的渐变效果，同时我们还可以加上动画效果，利用的是transtion:all ease 300ms即可 */
.b {
  color: #23b7cb;
  font-size: 15px;
  background: #fff;
  width: 200px;
  height: 100px;
  border: 3px transparent solid;
  border-radius: 30px;
  position: relative;
  box-sizing: border-box;
}

.b::after {
  content: '';
  position: absolute;
  top: -10px;
  bottom: -10px;
  left: -10px;
  right: -10px;
  background: linear-gradient(0deg, #FFCD1E, #FFEFB7);
  border-radius: 30px;
  content: '';
  z-index: -1;
}


.d {
  border: none;
  background-color: #fff;
  font-size: 40rpx;
  width: 250rpx;
  box-sizing: border-box;
  background-image: linear-gradient(#2e2e2e, #2e2e2e), linear-gradient(to bottom right, #0fd850, #f9f047);
  font-weight: 300;
  color: #2fd830;
  padding: 2rpx;
  border-radius: 100rpx;
  text-align: center;
  line-height: 1;
  background-clip: content-box, padding-box;
}

.c {
  width: 186rpx;
  height: 156rpx;
  border: 7rpx solid transparent;
  background: #F7FCFC;
  box-shadow: -6rpx 8rpx 16rpx 0rpx rgba(7, 53, 130, 0.11) inset;
  border-radius: 34rpx;
  position: relative;
  box-sizing: border-box;
}

.c::after {
  content: '';
  position: absolute;
  top: -12rpx;
  bottom: -12rpx;
  left: -12rpx;
  right: -12rpx;
  background: linear-gradient(0deg, #FFCD1E, #FFEFB7);
  content: '';
  z-index: -1;
  border-radius: 34rpx;
}