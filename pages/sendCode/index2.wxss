/* pages/sendCode/index2.wxss */
page{
  background: #fff;
}
.head_top{
  width: 100%;
  height: 100rpx;
  position: relative;
  z-index: -1;
  overflow: hidden;
}
.head_top::after{
  content: '';  
  width: 140%;
  height: 100rpx;
  position: absolute;
  z-index: -1;
  left: -20%;
  top: 0;
  border-radius: 0 0 50% 50%;
  background: #a4d1eb;
}

.bg_img{
  position: absolute;
  z-index:-1;
  width: 100%;
  height: 750rpx;
  filter: blur(10rpx);
}
.top{
  padding: 250rpx 0 20rpx;
}
.top image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.top text{
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #fff;
  margin-bottom: 40rpx;
}
.btn{
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #fff;
  width: 200rpx;
  height: 60rpx;
  border: 1px solid rgb(218, 205, 205);
  background: rgb(218, 205, 205);
  text-align:center;
  line-height:60rpx;
}

.st_icon{
  width: 122rpx;
  height: 42rpx;
  z-index: 111;
  font-size: 20rpx;
  line-height: 42rpx;
  text-align: center;
  border-radius: 21rpx  0 8rpx 0;
}
.s_bg2{
  color: #1F2879;
  background: linear-gradient(262deg, #B6AEF7 0%, #F0EFFF 48%, #CAC4FA 100%);
}
.s_bg1{
  color: #4E3D04;
  background: linear-gradient(262deg, #F2D678 0%, #FFF4D1 48%, #F2D576 100%);
}
.s_bg0{
  color: #1F3E79;
  background: linear-gradient(262deg, #AED0F7 0%, #EFF8FF 48%, #AAD8FF 100%);
}
.left {

  width: 18rpx;
 
  height: 18rpx;
 
  border-top: 2px solid #867f7a;
 
  border-right: 2px solid #867f7a;
 
 transform: rotate(45deg);
 
} 
.i{
  border: solid black;
  border-width: 0 1px 1px 0;
  display: inline-block;
  padding: 6px;
  transform: rotate(135deg);
  -webkit-transform: rotate(135deg);
}
i {
  border: solid black;
  border-width: 0 1px 1px 0;
  display: inline-block;
  padding: 3px;
}

.right {
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}

.left {
  transform: rotate(135deg);
  -webkit-transform: rotate(135deg);
}

.up {
  transform: rotate(-135deg);
  -webkit-transform: rotate(-135deg);
}

.down {
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
}

.box{
  border-top: 40rpx solid blue;
  border-left: 25rpx solid transparent;
  border-right: 25rpx solid transparent;
  height: 0;
  width: 100rpx;
