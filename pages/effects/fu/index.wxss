/* pages/effects/fu/index.wxss */
page {
  background-color: #fff;
}

.box {
  width: 500rpx;
  height: 400rpx;
  margin: 80px auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fu-text {
  width: 400rpx;
  height: 400rpx;
  background: red;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
}

.fu-text::before {
  content: '';
  width: 100%;
  height: 10rpx;
  top: 60rpx;
  position: absolute;
  background-color: #fff;
}

.fu-text::after {
  content: '';
  height: 100%;
  width: 10rpx;
  left: 50%;
  margin-left: -5rpx;
  position: absolute;
  background-color: #fff;
}

.left-rect {
  width: 100rpx;
  height: 200rpx;
  border: 20rpx solid #fff;
  position: absolute;
  top: 30%;
  left: -65rpx;
}

.middle-rect {
  width: 20rpx;
  height: 300rpx;
  position: absolute;
  top: 30%;
  left: 30%;
}

.middle-rect::before {
  content: '';
  width: 80rpx;
  height: 20rpx;
  background-color: #fff;
  position: absolute;
}

.middle-rect::after {
  content: '';
  width: 200rpx;
  height: 15rpx;
  background-color: #fff;
  position: absolute;
  top: 75rpx;
  left: 80rpx;
}

.right-rect {
  width: 500rpx;
  height: 40rpx;
  background-color: #fff;
  border-radius: 0 40rpx 0 0;
  position: absolute;
  top: 25%;
  right: 55rpx;
}