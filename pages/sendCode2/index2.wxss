.ys-verification {
  width: 100%;
  height: 80px;
  display: flex;
  justify-content: space-around;
}

.ys-verification .input-wrapper {
  border-bottom: 1px solid #d6d6d6;
  width: 15%;
  height: 0;
  padding-bottom: 20%;
  position: relative;
}

.ys-verification input {
  position: absolute;
  width: 100%;
  height: 100%;
  text-align: center;
  transition: all 0.3s;
  font-size: 7vw;
  color: #333;
}

.ys-verification input:focus {
  border-bottom: 1px solid #666;
}



