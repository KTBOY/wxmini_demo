/* pages/jsCase/papers/index.wxss */
page {
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
  padding-bottom: calc(constant(safe-area-inset-bottom)+ 120rpx);
}

.hd {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 15rpx;

}

.choose_box {
  line-height: 55rpx;
}

.check_img {
  width: 35rpx;
  height: 35rpx;
}

.title {
  font-size: 33rpx;
  font-weight: bold;
  color: #333;
}

radio {
  transform: scale(0.8);
}

radio .wx-radio-input.wx-radio-input-checked {
  background: #0394F0 !important;
  border-color: #0394F0 !important;
}

checkbox {
  transform: scale(0.8);
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #0394F0 !important;
  border-color: #0394F0 !important;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 18rpx;
  height: 18rpx;
  line-height: 18rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.name {
  font-size: 26rpx;
  color: #333;
}

/* BTN */
.bottom_fix {
  width: 100%;
  padding-top: 10rpx;
  position: fixed;
  bottom: 0;
  z-index: 99;
  background-color: #fff;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}


.bottom_btn {
  width: 702rpx;
  background: #2780F6;
  border-radius: 44rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 400;
  color: #FFFFFF;
}


/* 弹框 */
.pop_info {
  width: 498rpx;
  height: 215rpx;
  background: #FFFFFF;
  border-radius: 25rpx;
  position: fixed;
  z-index: 1010;
  top: 50%;
  left: 50%;
  box-sizing: border-box;
  transform: translate(-50%, -50%);
  font-size: 30rpx;
  color: #333;
}

/* 标题 */
.rules_title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 45rpx;
  padding: 49rpx 49rpx 0;
}

.btn_ok {
  text-align: center;
  line-height: 80rpx;
  color: #4E7BBA;
}

/* 下面的btn按钮 */
.btn_pop {
  width: 256rpx;
  height: 72rpx;
  border-radius: 36rpx;
  text-align: center;
  line-height: 72rpx;
  font-size: 30rpx;
  color: #4E7BBA;
}

.xian {
  width: 2rpx;
  height: 80rpx;
  background-color: #CACACA;
}

.heng {
  width: 100%;
  height: 2rpx;
  background-color: #CACACA;
}

.test_img {
  width: 250rpx;
  height: 200rpx;
  padding-left: 55rpx;
}

.title_img {
  width: 250rpx;
  height: 200rpx;
  margin-left: 26rpx;
}

.c_head {
  padding-top: 20rpx;
}