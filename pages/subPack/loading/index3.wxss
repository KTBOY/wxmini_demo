/* pages/subPack/loading/index3.wxss */
page{
  background-image: linear-gradient(to right, #a8edea 0%, #fed6e3 100%);
  padding-bottom: 100rpx;
}
.box{
  margin: 20rpx auto;
  width: 685rpx;
  height: 200rpx;
  background: #ccd8d7;
  border-radius: 10rpx;
  box-shadow: 0px 0px 30rpx 1rpx #fed6e3 inset;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 1 */
.loader1{
  width: 48rpx;
  height: 96rpx;
  display: inline-block;
  position: relative;
  border: 3rpx solid #fff;
  animation: loading1 2s linear infinite alternate;
}
.loader1::before {
  content: '';
  position: absolute;
  top: -12rpx;
  left:50%;
  margin-left: -18rpx;
  width: 36rpx;
  height: 12rpx;
  background-color: #fff;
}

@keyframes loading1 {
  0% {
    box-shadow: 0 0 inset #fff;
  }
  60%{
    box-shadow: 0 -60px inset #d69999;
  }
  100% {
    box-shadow: 0 -96px inset #e47777;
  }
}
/* 2 */
.loader2{
  width: 64rpx;
  height: 64rpx;
  display: inline-block;
  position: relative;
  background: #fff;
  animation: loading2 2s ease infinite alternate-reverse;
  /* alternate-reverse 动画在奇数次（1、3、5...）反向播放，在偶数次（2、4、6...）正向播放。 */
}
@keyframes loading2 {
  0% {
    transform: scale(1) rotate(0deg)
  }
  100% {
    transform: scale(.1) rotate(360deg)
  }
}
/* 3 */
.loader3 {
  width: 24rpx;
  height: 24rpx;
  box-shadow: 0 30rpx, 0 -30rpx;
  border-radius: 4rpx;
  background: currentColor;
  display: inline-block;
  position: relative;
  color: #fff;
  left: -30rpx;
  animation: loading3 2s ease infinite;
}

.loader3::before, .loader3::after {
  content: '';
  width: 24rpx;
  height: 24rpx;
  box-shadow: 0 30rpx, 0 -30rpx;
  border-radius: 4rpx;
  background: currentColor;
  color: #fff;
  position: absolute;
  left: 30rpx;
  top: 0;
  animation: loading3 2s 0.2s ease infinite;
}
.loader3::after {
  left: 60rpx;
  animation-delay: 0.4s;
}

@keyframes loading3 {
  0% {
    top: 0;
    color: rgba(255, 255, 255, 1)
  }
  50% {
    top: 30rpx;
    color: rgba(255, 255, 255, 0.2)
  }
  100% {
    top: 0;
    color: rgba(255, 255, 255, 1)
  }
}